<div class="columns is-gapless m-0 is-vcentered">

    <div id="signup-form-col" class="column">
        <div id="signin-form-container" class="container p-6 mw-50">
            <h2 class="title">Sign In to Eventlite</h2> 

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="field">
                    <div class="control">
                        <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class:"input" }, label_html: { class:"label" }, wrapper: false %>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "input" }, wrapper: false, label_html: { class: "label" }%>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.input :remember_me, input_html: { class: "checkbox mr-2" }, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.button :submit, "Sign In", class: "button is-danger is-medium" %>

                    </div>
                </div>


            <% end %>

        </div>
    </div>

    <div id="signin-form-bg" class="column is-5">
        <div class="bg-overlay"></div>
        <div id="signin-bg-content" class="container p-5">
            <h2 class="title has-text-centered "> Don't Have an Account?</h2>
            <p class= "mb-4"> Create an account and start your adventure with us! </p>
            <%= link_to 'Sign Up', new_user_registration_path, class:"button is-dark is-medium" %>
        </div>
    </div>

</div>







